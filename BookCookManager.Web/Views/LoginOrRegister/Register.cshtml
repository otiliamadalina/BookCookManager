@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Register";
}

<div class="p-4 bg-light rounded shadow" style="max-width: 400px; margin: auto; margin-top: 50px;">
    <h2 class="mb-4">Register</h2>

    @using (Html.BeginForm("Register", "LoginOrRegister", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <input type="text" name="UserName" class="form-control" placeholder="Username" required />
        </div>

        <div class="mb-3">
            <input type="email" name="Email" class="form-control" placeholder="Email" required />
        </div>

        <div class="mb-3">
            <input type="password" name="Password" class="form-control" placeholder="Password" required minlength="6" />
        </div>

        <div class="mb-3">
            <input type="password" name="ConfirmPassword" class="form-control" placeholder="Confirm Password" required minlength="6" />
        </div>

        <button type="submit" class="btn w-100" style="background-color:#CDB4DB; border:none; color:#fff;">
            Register
        </button>
    }

    <p class="mt-3 text-center">
        Already have an account? <a href="@Url.Action("Login", "LoginOrRegister")">Login here</a>.
    </p>
</div>
