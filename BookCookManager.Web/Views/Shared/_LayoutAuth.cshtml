<!-- Views/Shared/_LayoutAuth.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - AuthPage</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #A2D2FF; /* pastel blue */
            font-family: Arial, sans-serif;
        }

        .btn-login {
            background-color: #CDB4DB; /* pastel purple */
            color: #333;
            font-weight: bold;
        }

        .btn-register {
            background-color: #FFC8DD; /* pastel pink */
            color: #333;
            font-weight: bold;
        }

        .btn-login:hover {
            background-color: #BDE0FE; /* lighter blue */
            color: #222;
        }

        .btn-register:hover {
            background-color: #BDE0FE;
            color: #222;
        }

        .container-center {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .box {
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 6px 12px rgba(0,0,0,0.1);
            text-align: center;
            max-width: 350px;
            width: 100%;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>

    <div class="container-center">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
